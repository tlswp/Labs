{
  "name": "npm-automation-env",
  "version": "1.0.9",
  "description": "",
  "main": "index.js",
  "watch": {
    "validate-html": {
      "patterns": [
        "src"
      ],
      "extensions": "html",
      "quiet": true,
      "legacyWatch": true
    },
    "stylelint": {
      "patterns": [
        "src"
      ],
      "extensions": "css"
    },
    "jshint": "src/"
  },
  "scripts": {
    "test": "mocha",
    "server": "live-server src",
    "validate-html": "html-validate src",
    "stylelint": "stylelint src/**/*.css",
    "jshint": "jshint src/",
    "watch": "npm-watch",
    "dev-mode": "npm-run-all --parallel server watch",
    "postinstall": "npm i -g live-server html-validate jshint"
  },
  "author": "Kalagin Ivan",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "dependencies": {}
}
